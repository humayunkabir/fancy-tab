mixin fancytab-with-icon
  .fancy-tab
    .fancy-bar.justify-content-center
      .fancy-bar-item.active
        = '\n'
        span.fas.fa-home
        div.mt-1 Home
      .fancy-bar-item
        = '\n'
        span.fas.fa-user-circle
        div.mt-1 Profile
      .fancy-bar-item
        = '\n'
        span.fas.fa-cog
        div.mt-1 Settings
